<Window x:Name="MainWin" x:Class="croquis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:croquis"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="croquis" Height="900" Width="1936" MinHeight="735" MinWidth="1280" Background="#262626" SizeChanged="winFormResizeEvent" Loaded="WinLoad"
        >
    <Grid x:Name="MainGrid" Background="#262626">

        <Border x:Name="showItem" BorderBrush="#404040" BorderThickness="1" Margin="2,2,0,2" HorizontalAlignment="Left" Width="219"  >
            <Grid x:Name="t" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="898*" />
                </Grid.RowDefinitions>


                <TreeView x:Name="croquisTreeView">
                    
                </TreeView>


            </Grid>

        </Border>


        <Grid x:Name="view" Margin="221,2,0,2" HorizontalAlignment="Left" Width="328" >

            <Border x:Name="fileGrid"  BorderBrush="#404040" BorderThickness="1" Margin="1,0,-1,0" Height="430
                    
                    " VerticalAlignment="Top">
                <Grid x:Name="fileSearchBox"  >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="17*"/>
                        <RowDefinition Height="197*"/>


                    </Grid.RowDefinitions>
                    <TextBlock x:Name="fileSearch" Margin="10,0,0,0" FontSize="15" HorizontalAlignment="Left" Width="75" Height="20" VerticalAlignment="Center"><Run Text="파일탐색기"/></TextBlock>

                    <!--<Button x:Name="fileLoad" Margin="294,8,10,0" Click="onClick" ClickMode="Press"  RenderTransformOrigin="-1.217,0.474" VerticalAlignment="Top" Panel.ZIndex="1" Opacity="0.25" HorizontalAlignment="Stretch" Height="21"/> -->
                    <!--                    <Image Source="/Resources/plus.png" Margin="293,11,14,0" Height="15" VerticalAlignment="Top"   /> -->
                    <TreeView x:Name="trView" Grid.Row="1">

                    </TreeView>
                </Grid>
            </Border>

            <Border x:Name="preViewGrid"  BorderBrush="#404040" BorderThickness="1" Margin="1,0,-1,0" Height="430
                    
                    " VerticalAlignment="Bottom">
                <Grid x:Name="preViewBox" >

                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="195*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" x:Name="preview" Margin="10,8,155,0" FontSize="15" Height="22" VerticalAlignment="Top" ><Run Language="ko-kr" Text="미리보기"/><LineBreak/><Run/></TextBlock>
                    <ListBox Grid.Row="1" x:Name="PicBox">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate x:Name="picBoxTemplate">
                                <UniformGrid Rows="{Binding Row}" Columns="{Binding Cols}"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>


                </Grid>
            </Border>
        </Grid>




        <Border x:Name="ContentView" BorderBrush="#404040" BorderThickness="1" Margin="555,2,229,2">
            <Grid x:Name="content" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="348*"/>
                </Grid.RowDefinitions>
                <Image x:Name="mainContent" Grid.Row="0"/>
            </Grid>

        </Border>

        <Border x:Name="OptionView" BorderBrush="#404040" BorderThickness="1" Margin="0,2,2,2" HorizontalAlignment="Right" Width="225" >

            <Grid x:Name="option" Background="#33000000" HorizontalAlignment="Right" Width="223">

                <TextBlock x:Name="timer" 
                       Text="타이머" Height="16"
                       VerticalAlignment="Top"
                      
                       Margin="10,28,43,0"  
                       
                        />
                <TextBox x:Name="timerInput" 
                     TextWrapping="Wrap" Height="20"
                     Text="30" 
                     VerticalAlignment="Top" 
                     Margin="0,60,41,0" HorizontalAlignment="Right" Width="172" />

                <TextBlock x:Name="refreshTimer" 
                       Text="휴식 시간" Height="16"
                       VerticalAlignment="Top"
                      
                       Margin="9,133,29,0" 
                       />
                <TextBox x:Name="refreshTimerInput" 
                     TextWrapping="Wrap" 
                     Text="3" Height="32"
                     VerticalAlignment="Top" 
                     Margin="0,158,24,0" HorizontalAlignment="Right" Width="189"
                     />
                <CheckBox x:Name="Duplicated" Content="중복 허용" Height="27" Margin="0,209,83,0" VerticalAlignment="Top" Width="29" HorizontalAlignment="Right"/>
                <CheckBox x:Name="random" Content="이미지 랜덤" Height="4" Margin="0,246,83,0" VerticalAlignment="Top" Width="73" HorizontalAlignment="Right"/>

                <Button x:Name="start" Content="Button" Margin="6,0,6,28"  VerticalAlignment="Bottom" Click="Button_Click" HorizontalAlignment="Stretch" Height="40"/>

            </Grid>
        </Border>




    </Grid>



</Window>
